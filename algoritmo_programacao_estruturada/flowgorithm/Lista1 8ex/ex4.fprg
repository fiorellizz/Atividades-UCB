            <if expression="peso=1">
                <then>
                    <assign variable="mediacompeso" expression="((nota1*3) + (nota2*3) + (nota3*4)) / 10"/>
                    <output expression="&quot;Sua m&#233;dia &#233; &quot;&amp;mediacompeso" newline="True"/>
                </then>
                <else>
                    <assign variable="mediasempeso" expression="((nota1) + (nota2) + (nota3)) / 3"/>
                    <output expression="&quot;Sua m&#233;dia &#233; &quot; &amp;mediasempeso" newline="True"/>
                </else>
            </if>
        </body>
