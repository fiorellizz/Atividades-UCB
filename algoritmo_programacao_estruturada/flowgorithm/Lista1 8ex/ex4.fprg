    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="nota1, nota2, nota3, mediasempeso, mediacompeso, peso" type="Real" array="False" size=""/>
            <output expression="&quot;Escreva sua primeira nota!&quot;" newline="True"/>
            <input variable="nota1"/>
            <output expression="&quot;Escreva sua segunda nota!&quot;" newline="True"/>
            <input variable="nota2"/>
            <output expression="&quot;Escreva sua terceira nota!&quot;" newline="True"/>
